<body>
  <form class="form" action="" method="get" class="sign-up-form">
    <h2>SIGN UP YOU FILTHY ANIMAL</h2>
    <div class="input-container">
      <div class="name-container">
        <div class="input-wrapper">
          <label for="first">First Name (optional)</label>
          <input type="text" name="first" id="first" />
        </div>
        <div class="input-wrapper">
          <label for="last">Last Name (optional)</label>
          <input type="text" name="last" id="last" />
        </div>
      </div>
      <div class="username-container">
        <div class="input-wrapper">
          <label for="username">Username*</label>
          <input type="text" name="username" id="username" />
        </div>
        <div class="input-wrapper">
          <label for="password">Password*</label>
          <input type="password" name="password" id="password" />
        </div>
      </div>
    </div>
    <h3>Choose an animal*</h3>
    <div class="avatar-container">
      <% animals.forEach(e => { %>
      <label for="<%= e.name %>">
        <input
          type="radio"
          name="avatar"
          class="avatar"
          id="<%= e.name %>"
          value="<%= e.name %>"
        />
        <lottie-player
          class="lottie-<%= e.name %>"
          src="<%= e.avatar %>"
          speed="1"
          style="width: 6rem; height: 10rem"
          loop
          hover
        ></lottie-player>
      </label>
      <% }) %>
    </div>
    <div class="button-wrapper">
      <button type="submit" class="sign-up-button">Sign Up</button>
    </div>
  </form>
</body>
